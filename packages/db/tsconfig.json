{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    // "ignoreDeprecations": "6.0",
