{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",

  "globalEnv": ["DATABASE_URL"],

  "tasks": {
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**","dist/**",  "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn":["^db:generate"]
    }, 
    "db:generate":{
      "cache":false
    }, 
    "db:studio":{
      "cache":false
    },
    "db:test": {
      "cache": false,
      "dependsOn": ["db:generate"]
    }
  }
}
